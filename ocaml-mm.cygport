inherit ocaml

NAME="ocaml-mm"
VERSION=0.2.0
RELEASE=1
CATEGORY="Libs"
SUMMARY="OCaml multimedia operations library"
DESCRIPTION="ocaml-mm is a pure OCaml library dedicated to performing
operations on multimedia contents."
HOMEPAGE="http://savonet.sourceforge.net/"
SRC_URI="mirror://sourceforge/savonet/${NAME}-${VERSION}.tar.gz"
PATCH_URI="0.2.0-cygwin.patch"

DIFF_EXCLUDES="external"

src_compile() {
	lndirs
	cd ${B}
	cygconf
	cygmake -j1
}
